<h1><%= title %> : <%= category.name %></h1>

<% if (foods.length) { %>
    <p><strong>Delete the following foods before attempting to delete this category.</strong></p>

    <div class="margin-left:20px; margin-top:20px">
        <h4>Foods</h4>

        <dl>
            <% foods.map( food => { %>
               <dt>
                <a href="<%= food.url %>"><%= food.name %></a>
               </dt> 
            <% }) %>
        </dl>
    </div>
<% } else { %>
    <p>Do you really want to delete this Category?</p>

    <form action="" method="POST">
        <div class="form-group">
            <input type="hidden" id="categoryid" class="form-control" name="categoryid" required="true" value="<%= category._id %>">
        </div>

        <button class="btn btn-primary" type="submit">Delete</button>
    </form>
<% } %>